
<section class="featured-products">
    <h2 class="featured-products__heading">
        {{ collections[section.settings.collection].title }}
    </h2>
    <div class="featured-products__items">
        
        {% for product in collections[section.settings.collection].products %}
            
               <a href="{{ product.url }}" class="featured-product__card">
            
                  <img class="featured-product__image" src="{{ product.featured_image | img_url: 'master' }}" alt="{{ product.featured_image.alt }}">
                  <div>
                    <h3>{{ product.title }}</h3>
                    <span> {{ product.price | money }} </span>
                  </div>                
               </a>
            
        {% endfor %}
        
        
    </div>
</section>



{% schema %}

{
    "name": "Featured Products",
    "settings": [
        {
            "type": "collection",
            "id": "collection",
            "label":"collection"
        }
    ],
    "presets": [
        {
            "name": "Featured Products",
            "category": "Products Display"
        }
    ]
}
{% endschema %}
{% stylesheet %}
.featured-products{
    margin-left: auto;
    margin-right: auto;
    max-width: 1200px;
    padding-top: 50px;
    padding-bottom: 50px;

}
.featured-products__heading{
    margin-bottom: 25px;
}
.featured-products__items{
    align-items:flex-start;
    display:flex;
    justify-content: center;
}
.featured-product__card{
    width: 23%;
    margin-left: 15px;
    margin-right: 15px;
}
.featured-product__image{
    max-width: 100%;
}
{% endstylesheet %}

